<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
    <title>Home</title>
  </head>
  <body>
    <!-- Partial For Headers -->
     <%- include('_header') %>

     <div style="display: flex;justify-content: space-around;margin-top:50px">
      <div class="border border-dark" style="width: 45%;">
        <div class=" bg-success bg-gradient text-white border-bottom border-dark" >
            <div class="mx-auto" style="width: 200px;">
                <h1>To Review</h1>
            </div>
        </div>
        <div>
            
            <% for(let emp of to_review){%>
             <div class="card" style="border: 0;">
                <div class="card-body">
                    <h5 class="card-title">For : <%=emp.name%></h5>
                    <form action="/review/create_review/<%=emp._id %>" method="POST">
                        <div class="form-group">
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="new_review" placeholder="Type your feedback....."></textarea>
                        </div>
                    <div style="display: flex; justify-content: flex-end;margin-top: 7px;">
                        <button type="submit" class="btn btn-dark">Submit Feedback</button>
                    </div>
                    </form>
                </div>
            </div>
            <%}%>

           
        </div>
    </div>
    <div class="border border-dark" style="width: 45%;">

      <div class=" bg-success bg-gradient text-white border-bottom border-dark" >
          <div class="mx-auto" style="width: 200px;">
              <h1>My Review</h1>
          </div>
      </div>
      <div>
          
      <% for(let i=0;i< my_review.length;i++){%>
      <div class="card">
          <div class="card-body">
              <h5 class="card-title">From : <%=my_review[i].reviewer_name%></h5>
              <p class="card-text">Feedback: <%=my_review[i].review%></p>
              <p class="card-text">Modified At: <%=my_review[i].lastupdate%></p>
          </div>
      </div>
      <% } %>




      </div>
  </div> 

    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>
  </body>
</html>
