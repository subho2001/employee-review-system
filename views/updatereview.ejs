<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Review Update</title>
</head>

<body>

    <!-- PARTIAL FOR HEADER -->
    <%- include('_header') %>

    <div class="w-50  mx-auto mt-5">

        <form class="w-50  mx-auto mt-2" action="/review/updatedreview/<%=rid%>" method="POST">

            <!-- PARTIAL FOR REVIEWFORM WITH DATA -->
            <%- include('_review_form', {fromemail:data.fromemail,foremail:data.foremail,feedback:data.feedback})%>

            <div class="mb-3">
                    <div class="d-flex justify-content-start">
                        <a href="/review/reviewdata" type="button" class="btn btn-primary align-self-center">GO BACK</a>
                    </div>
                    <div class="d-flex justify-content-end" style="margin-top: -38px;">
                        <button class="btn btn-primary align-self-center">Update Review</button>
                    </div>  
            </div>

        </form>
    
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script>
        let inputag = document.querySelectorAll('input');
        for(let inp of inputag){
            inp.readOnly=true;
        }
    </script>
</body>
</html>